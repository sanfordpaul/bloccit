<h2>Sign-up Confirmation</h2>
<div class='row'>
  <div class='col-md-8'>
    <h4>Are you sure these values are correct?</h4>
    <p> Name:  <%= @user.name %> </p>
    <p> Email: <%= @user.email  %> </p>
  </div>

</div>
  <div class='row'>
    <div class='col-md-4' style="width: auto">
      <%= button_to "Yes", {controller: "users", action: "create", params: params.permit(user: [:name, :email, :password, :password_confirmation])}, class: 'btn btn-success' %>
    </div>
    <div class='col-md-4' style="width: auto">
      <%= button_to "No", {controller: "users", action: "new", }, class: 'btn btn-failure', method: :get %>
    </div>

  </div>
